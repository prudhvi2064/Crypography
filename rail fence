#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main() {
    int i, j, len, rails, count, code[100][100];
    char str[1000];
    printf("Enter a Secret Message\n");
    fgets(str, 20, stdin);
    len = strlen(str);
    printf("Enter number of rails: ");
    scanf("%d", &rails);

    for (i = 0; i < rails; i++) {
        for (j = 0; j < len; j++) {
            code[i][j] = 0;
        }
    }

    count = 0;
    j = 0;
    while (j < len) {
        if (count % 2 == 0) {
            for (i = 0; i < rails; i++) {
                code[i][j] = (int)str[j];
                j++;
            }
        } else {
            for (i = rails - 2; i > 0; i--) {
                code[i][j] = (int)str[j];
                j++;
            }
        }
        count++;
    }

    // Print the "W" form
    for (i = 0; i < rails; i++) {
        for (j = 0; j < len; j++) {
            if (code[i][j] != 0) {
                printf("%c", code[i][j]);
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }

    printf("The message in the correct order: ");
    for (i = 0; i < len; i++) {
        for (j = 0; j < rails; j++) {
            if (code[j][i] != 0) {
                printf("%c", code[j][i]);
            }
        }
    }
    printf("\n");

    return 0;
}
